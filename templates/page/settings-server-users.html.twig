{% extends 'base.html.twig' %}
{% import 'macros/url-generator.html.twig' as urlGenerator %}

{% block title %}
    Settings - App
{% endblock %}

{% block stylesheets %}
    <link href="{{ urlGenerator.cssUrl('settings.css') }}" rel="stylesheet">
{% endblock %}

{% block scripts %}
    <script src="{{ urlGenerator.jsUrl('settings-server-users.js') }}"></script>
{% endblock %}

{% block body %}
    <main role="main" class="container">
        {{ include('component/navbar.html.twig') }}

        <div style="text-align: center;">
            {{ include('component/settings-nav.html.twig') }}

            <div style="padding-bottom: 1rem;padding-top: 1rem">
                <h5 style="margin-bottom: 1rem;">User Management</h5>

                <p class="text-muted">List of all users. Click on table row to edit/delete users.</p>

                <div id="userManagementAlerts"></div>

                <div class="table-responsive">
                    <table class="table table-hover" id="usersTable">
                        <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Admin</th>
                        </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="spinner-border d-none" role="status" id="userTableLoadingSpinner">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>

        <button type="button" class="btn btn-primary float-end" style="width: 100%" onclick="showCreateUserModal()">Create User</button>

        {{ include('component/modal-user.html.twig') }}
    </main>
{% endblock %}
