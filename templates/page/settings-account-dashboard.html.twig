{% extends 'base.html.twig' %}

{% block title %}
    Settings - General Account
{% endblock %}

{% block stylesheets %}
    <link href="/css/settings.css" rel="stylesheet">
{% endblock %}

{% block scripts %}
    <script src="/js/settings-account-dashboard.js"></script>
{% endblock %}

{% block body %}
    <main role="main" class="container">
        {{ include('component/navbar.html.twig') }}

        <div style="text-align: center;">
            {{ include('component/settings-nav.html.twig') }}

            <div style="padding-top: 1rem">               
                <div class="mb-3">
                    <h5 class="text-center">Dashboard settings</h5>
                    <div id="accountDashboardSettingsLog"></div>
                    <ul class="nav flex-column mb-4">
                        {% for row in rowOrder %}
                            <span class="nav-link dashboardRowItem d-flex justify-content-center align-items-center" data-rowid="{{ row }}" style="opacity: {{ row in extendedRows ? '1' : '0.5' }}">
                                <div class="btn-group" style="visibility: hidden;">
                                    <button type="button" class="btn btn-primary"><i class="bi {{ row in extendedRows ? 'bi-eye' : 'bi-eye-slash' }}"></i></button>
                                    <button type="button" class="btn btn-primary"><i class="bi bi-arrow-up"></i></button>
                                    <button type="button" class="btn btn-primary"><i class="bi bi-arrow-down"></i></button>
                                </div>
                                <span class="d-flex flex-grow-1 justify-content-center">{{ row }}</span>
                                <div class="btn-group d-flex flex-shrink-1">
                                    <button type="button" class="btn btn-primary"><i class="bi {{ row in extendedRows ? 'bi-eye' : 'bi-eye-slash' }}" onclick="toggleRowExtension(this)"></i></button>
                                    <button type="button" class="btn btn-primary" onclick="moveItemUp(this)"><i class="bi bi-arrow-up"></i></button>
                                    <button type="button" class="btn btn-primary" onclick="moveItemDown(this)"><i class="bi bi-arrow-down"></i></button>
                                </div>
                            </span>                            
                        {% endfor %}
                    </ul>
                    <button type="button" class="btn btn-primary float-end mt-3" onclick="updateDashboardRows()">Update dashboard rows</button>
                </div>
            </div>
        </div>
    </main>
{% endblock %}