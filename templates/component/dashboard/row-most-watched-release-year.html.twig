{% macro create(dashboardRow, mostWatchedReleaseYears, routeUsername) %}

    {% import 'component/dashboard/row-item-toggle.html.twig' as rowItemToggle %}
    {% import 'macros/url-macros.html.twig' as urlMacros %}
    {{ rowItemToggle.create(dashboardRow) }}

    <li class="list-group-item {{ dashboardRow.isExtended ? 'activeItem' : 'inactiveItem' }}" style="padding: 1rem 0.4rem 0 0.4rem;">
        <div class="row row-cols-3 row-cols-md-3 row-cols-lg-6">
            {% for mostWatchedReleaseYear in mostWatchedReleaseYears %}
                {% if loop.index <= 12 %}
                    <div class="col" style="padding-bottom: 1rem;">
                        <a class="card h-100 position-relative"
                             style="cursor: pointer"
                             href="{{ urlMacros.userMoviesWithReleaseYearUrl(applicationUrl, routeUsername, mostWatchedReleaseYear.name) }}">
                            <div class="card-header text-truncate" style="padding: 0.2rem;border-bottom:0">
                                <small class="text-muted" style="font-size: 0.9rem;font-weight: bold;">{{ mostWatchedReleaseYear.name }}</small>
                            </div>
                            <div class="card-footer" style="padding: 0.1rem">
                                <small class="text-muted" style="font-size: 0.9rem;">{{ mostWatchedReleaseYear.count }}x</small>
                            </div>
                        </a>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </li>
{% endmacro %}
